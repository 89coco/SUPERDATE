<div style="background: rgb(72, 56, 118)">
  <div class="text-center text-white">
    <h1 style="font-family: Bangers; font-size: 68px">SUPERDATES</h1>
  </div>

  <div class="container">
    <div class="row justify-content-center">
        <% @supers.each do |sup| %>
            <div class="show-card-index" style="width: 315px; height: 550px;">
            <div class="card-img">
            <% if sup.photos.attached? %>
                <%= cl_image_tag sup.photos[0].key, class: "card-img-top" %>
            <% else %>
                <img src="" alt="">
            <% end %>
            </div>
                <div class="card-body">
                  <div class="card-title">
                    <h5 class="super-name" style="text-transform: uppercase; font-size: 36px; font-family: 'Bangers';"><%= sup.super_name %></h5>
                    <%# <span class="universe-title"><%= sup.universe %></span> %>
                    <%# <span class="badge badge-price" style="font-size: 18px;"> Â£<%= sup.price %>/HR</span> %>
                  </div>
                  <div class="character">
                    <div class="character-trait"> STRENGTH  <%= "  ""ðŸ–¤" * sup.strength.to_i %> </div>
                    <div class="character-trait"> HUMOUR  <%= "  ""ðŸ–¤" * sup.humour.to_i %> </div>
                    <div class="character-trait"> ROMANCE  <%= "  ""ðŸ–¤" * sup.romance.to_i %> </div>
                    <div class="character-trait"> KINDNESS  <%= "  ""ðŸ–¤" * sup.kindness.to_i %> </div>
                  </div>
                  <div class="card-select">
                    <button class="btn-view" style="text-decoration: none;"> <%= link_to "VIEW", super_path(sup) %> </button>
                  </div>
                </div>
            </div>
        <% end %>
    </div>
  </div>
</div>
    <div class="show-card-index" style="width: 315px; height: 550px; ml-10;">
      <div id="map" style="width: 100%; height: 600px;"
        data-controller="mapbox"
        data-mapbox-markers-value="<%= @markers.to_json %>"
        data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
