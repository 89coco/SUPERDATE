<div style="background: rgb(72, 56, 118)">
  <div class="text-center text-white">
    <h1 style="font-family: Bangers; font-size: 68px">SUPERDATES</h1>
  </div>

  <div class="container py-5">
    <div class="row">
      <% @supers.each do |sup| %>
        <div class="show-card-index" >
          <% if sup.super_name == "the joker"%>
          <img src="/assets/joker.png" class="card-img-top">
          <% elsif sup.super_name == "bane"%>
          <img src="/assets/bane.png" class="card-img-top">
          <% elsif sup.super_name == "spiderman"%>
          <img src="/assets/spider.png" class="card-img-top">
          <% elsif sup.super_name == "elastic girl" %>
          <img src="/assets/elasti.png" class="card-img-top">
          <% end %>
            <div class="card-body">
              <div class="card-title">
                <h5 class="card-title super-name" style="text-transform: uppercase; font-size: 36px; font-family: 'Bangers';"><%= sup.super_name %></h5>
                <h6><%= sup.universe %></h6>
                <span class="badge badge-price" style="font-size: 18px;"> Â£<%= sup.price %>/HR</span>
                <p class="card-text" style="margin-top: 20px; color: black;"  > <%= sup.description %> </p>
              </div>
              <div class="character">
                <ul>
                <li class="character-trait"> STRENGTH <%= "ðŸ–¤" * sup.strength.to_i %> </li>
                <li class="character-trait"> HUMOUR <%= "ðŸ–¤" * sup.humour.to_i %> </li>
                <li class="character-trait"> ROMANCE <%= "ðŸ–¤" * sup.romance.to_i %> </li>
                <li class="character-trait"> KINDNESS <%= "ðŸ–¤" * sup.kindness.to_i %> </li>
                </ul>
              </div>
              <div class="card-select">
                <button class="btn-view" style=""> <%= link_to "VIEW", super_path(sup)%> </button>
              </div>
            </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
